{
  "name": "silenzio",
  "version": "0.0.2-beta.1",
  "type": "module",
  "files": [
    "dist"
  ],
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.3",
    "@types/webpack": "^5.28.2",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^5.0.0",
    "install-peers": "^1.0.4",
    "jest": "^29.7.0",
    "next": "^13.5.2",
    "prettier": "^3.0.3",
    "rollup-plugin-dts": "^6.0.2",
    "sanity": "^3.16.7",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "next": "^13.5.2",
    "sanity": "^3.16.7"
  },
  "description": "Michele Bruno's utility library",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "scripts": {
    "test": "jest --coverage",
    "dev": "yarn build:esm --watch",
    "lint": "eslint --fix . && prettier --write .",
    "prepare": "rm -rf dist && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc --outDir dist/esm --project tsconfig.build.json",
    "build:cjs": "tsc --outDir dist/cjs --project tsconfig.build.json --module commonjs --moduleResolution node"
  },
  "exports": {
    ".": {
      "module": "./dist/esm/index.js",
      "types": "./dist/esm/index.d.ts",
      "default": "./dist/esm/index.js"
    },
    "./next": {
      "module": "./dist/esm/next/index.js",
      "types": "./dist/esm/next/index.d.ts",
      "default": "./dist/esm/next/index.js"
    },
    "./sanity": {
      "module": "./dist/esm/sanity/index.js",
      "types": "./dist/esm/sanity/index.d.ts",
      "default": "./dist/esm/sanity/index.js"
    },
    "./utils": {
      "module": "./dist/esm/utils/index.js",
      "types": "./dist/esm/utils/index.d.ts",
      "default": "./dist/esm/utils/index.js"
    }
  },
  "author": "Michele Bruno",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/michelebruno/silenzio.git"
  }
}
