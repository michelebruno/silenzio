{
  "name": "@silenzio/core",
  "version": "0.0.8-alpha.1",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "repository": "https://github.com/michelebruno/silenzio.git",
  "author": "Michele Bruno",
  "files": [
    "dist"
  ],
  "bin": {
    "silenzio": "./bin/silenzio.js"
  },
  "scripts": {
    "prepare": "npm run build && npm run lint && npm run test",
    "link": "npm link @silenzio/core @silenzio/next @silenzio/types @silenzio/app-config @silenzio/sanity",
    "test": "jest --coverage",
    "dev": "yarn build:esm --watch",
    "lint": "eslint --fix . && prettier --write .",
    "build": "rm -rf ./dist && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc --outDir dist/esm --project tsconfig.build.json",
    "build:cjs": "tsc --outDir dist/cjs --project tsconfig.build.json --module commonjs --moduleResolution node "
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/lodash": "^4.14.200",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@silenzio/app-config": "^0.0.5",
    "@silenzio/types": "^0.0.7-alpha.0",
    "commander": "^11.1.0",
    "lodash": "^4.17.21"
  },
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "default": "./dist/cjs/index.js"
    },
    "./utils": {
      "types": "./dist/esm/utils.d.ts",
      "require": "./dist/cjs/utils.js",
      "import": "./dist/esm/utils.js",
      "default": "./dist/cjs/utils.js"
    }
  },
  "typesVersions": {
    "*": {
      ".": [
        "./dist/esm/index.d.ts"
      ],
      "./utils": [
        "./dist/esm/utils.d.ts"
      ],
      "utils": [
        "./dist/esm/utils.d.ts"
      ]
    }
  },
  "gitHead": "a70457f7bcb0c50eafad109a2ea7409bcb9a672b"
}
